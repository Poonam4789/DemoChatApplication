<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:paddingLeft="10dp"
        android:id="@+id/ll_view_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/view_profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@android:drawable/ic_menu_view"/>

        <TextView
            android:id="@+id/view_profile"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_toRightOf="@+id/view_profile_icon"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/profile"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/view_profile_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/divider3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="18dp"
        android:paddingRight="10dp"
        app:srcCompat="@android:drawable/arrow_down_float"/>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/ll_view_profile"
        android:background="@color/darker_grey"/>

    <ImageView
        android:id="@+id/logout_icon"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider3"
        android:layout_marginTop="11dp"
        app:srcCompat="@android:drawable/ic_lock_power_off"/>

    <TextView
        android:id="@+id/logout"
        android:layout_below="@+id/divider3"
        android:layout_toRightOf="@id/logout_icon"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/logout"/>

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/logout"
        android:background="@color/darker_grey"/>


</RelativeLayout>